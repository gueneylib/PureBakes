@model ShoppingCartItem

<form method="post">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="@Model.Product.Name">
            </div>
            <div class="col-md-6">
                <h2>@Model.Product.Name</h2>
                <p class="lead">Price: <strong>@Model.Product.Price.ToString("C")</strong></p>
                <hr>
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="Product.Name" />
                <input type="hidden" asp-for="Product.CategoryId" />
                <input type="hidden" asp-for="Product.ImageUrl" />
                <input type="hidden" asp-for="Product.Price" />
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" asp-for="Quantity" name="quantity" class="form-control" value="1">
                </div>
                <button type="submit" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
</form>