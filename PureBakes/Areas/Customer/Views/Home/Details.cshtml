@model ShoppingCartItem

<form method="post">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Product?.ImageUrl" class="img-fluid rounded" alt="@Model.Product?.Title">
            </div>
            <div class="col-md-6">
                <h2>@Model.Product?.Title</h2>

                <h4>@Html.Raw(Model.Product?.Description)</h4>
                <p class="lead">Price: <strong>@Model.Product?.Price.ToString("C")</strong></p>
                <hr>
                <input type="hidden" asp-for="ProductId"/>
                <input type="hidden" asp-for="@Model.Product != null ? Model.Product.Title : null" />
                <input type="hidden" asp-for="@Model.Product != null ? Model.Product.CategoryId : 0" />
                <input type="hidden" asp-for="@Model.Product != null ? Model.Product.ImageUrl : null" />
                <input type="hidden" asp-for="@Model.Product != null ? Model.Product.Price : 0" />
                <div class="form-group">
                    <label for="Quantity">Quantity:</label>
                    <input type="number" asp-for="Quantity" name="quantity" class="form-control" value="1">
                </div>
                <button type="submit" class="btn btn-primary bg-gradient">
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
</form>