@model IEnumerable<Product>

<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

 .card-img-top {
     flex-grow: 1;
     object-fit: cover;
     overflow: hidden;
     aspect-ratio: 1 / 1; /* Adjust aspect ratio as needed */
 }
</style>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2 h-100">
                <div class="col-12 p-1">
                    <div class="card mb-3 shadow rounded">
                        <img alt="image" src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price: @product.Price.ToString("c")
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

